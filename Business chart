  <script>
    function addSale() {
      const date = document.getElementById('sale-date').value;
      const product = document.getElementById('sale-product').value;
      const qty = document.getElementById('sale-qty').value;
      const price = document.getElementById('sale-price').value;
      const total = qty * price;

      const table = document.getElementById('sales-body');
      const row = table.insertRow();
      row.innerHTML = `
        <td>${date}</td>
        <td>${product}</td>
        <td>${qty}</td>
        <td>${price}</td>
        <td>${total}</td>
        <td><button onclick="deleteRow(this)">üóëÔ∏è</button></td>
      `;
    }

    function addExpense() {
      const date = document.getElementById('expense-date').value;
      const type = document.getElementById('expense-type').value;
      const amount = document.getElementById('expense-amount').value;
      const note = document.getElementById('expense-note').value;

      const table = document.getElementById('expense-body');
      const row = table.insertRow();
      row.innerHTML = `
        <td>${date}</td>
        <td>${type}</td>
        <td>${amount}</td>
        <td>${note}</td>
        <td><button onclick="deleteRow(this)">üóëÔ∏è</button></
